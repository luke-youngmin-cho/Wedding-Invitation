{
  "name": "wedding-invitation",
  "version": "1.0.0",
  "description": "Beautiful wedding invitation website with Firebase integration",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "firebase:deploy": "firebase deploy --only firestore:rules,storage:rules",
    "bundle-report": "vite-bundle-visualizer"
  },
  "dependencies": {
    "firebase": "^10.12.0",
    "swiper": "^11.0.0",
    "lazysizes": "^5.3.2",
    "dompurify": "^3.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-legacy": "^5.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "gh-pages": "^6.1.0",
    "postcss": "^8.4.0",
    "prettier": "^3.2.0",
    "tailwindcss": "^3.4.0",
    "terser": "^5.27.0",
    "vite": "^5.0.0",
    "vite-bundle-visualizer": "^1.0.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-imagemin": "^0.6.1",
    "vite-plugin-pwa": "^0.19.0",
    "vitest": "^1.2.0",
    "workbox-window": "^7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/luke-youngmin-cho/Wedding-Invitation.git"
  },
  "keywords": [
    "wedding",
    "invitation",
    "firebase",
    "vite",
    "pwa"
  ],
  "author": "",
  "license": "MIT",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}